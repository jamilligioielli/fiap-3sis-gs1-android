<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jamilligioielli.com.github.alunos_rm552414_rm552263.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        android:background="#E1D7FF"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <EditText
        android:id="@+id/nomeLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Nome do local"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/edittext_rounded_corners"
    android:textColorHint="#757575"
    android:textColor="#212121" />

    <EditText
        android:id="@+id/tipoEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Tipo do evento extremo"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/edittext_rounded_corners"
        android:textColorHint="#757575"
        android:textColor="#212121" />

    <EditText
        android:id="@+id/grauImpacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Grau: leve, moderado ou severo"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/edittext_rounded_corners"
        android:textColorHint="#757575"
        android:textColor="#212121" />

    <EditText
        android:id="@+id/dataEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Data do evento"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/edittext_rounded_corners"
        android:textColorHint="#757575"
        android:textColor="#212121" />

    <EditText
        android:id="@+id/noPessoasAfetadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Numero estimado de pessoas afetadas"
        android:inputType="number"
        android:padding="12dp"
        android:background="@drawable/edittext_rounded_corners"
        android:textColorHint="#757575"
        android:textColor="#212121" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="INSERIR"
        android:backgroundTint="#03DAC5"
    android:textColor="#FFFFFF"
    android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
</LinearLayout>